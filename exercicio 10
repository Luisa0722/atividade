#include <stdio.h>

int main() {
    int n, soma = 0, valor;
    
    printf("Calculadora de Soma\n");
    printf("Quantos numeros deseja somar? (max 100): ");
    
    if (scanf("%d", &n) != 1 || n <= 0) {
        printf("Erro: Quantidade invalida. Digite um numero positivo.\n");
        return 1;
    }
    
    if (n > 100) {
        printf("Erro: O numero maximo e 100.\n");
        return 1;
    }
    
    for (int i = 0; i < n; i++) {
        printf("Digite o %do numero: ", i + 1);
        
        if (scanf("%d", &valor) != 1) {
            printf("Erro: Valor invalido. Tente novamente.\n");
            i--;  // Repete a iteração atual
            while (getchar() != '\n');  // Limpa o buffer de entrada
            continue;
        }
        
        soma += valor;
    }
    
    printf("\n=== Resultado ===\n");
    printf("Total de numeros somados: %d\n", n);
    printf("Soma total: %d\n", soma);
    printf("Media: %.2f\n", n > 0 ? (float)soma / n : 0.0f);
    
    return 0;
}
