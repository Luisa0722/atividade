#include <stdio.h>

int main() {
    int HT, VH, PD;
    float SB, TD, SL;
    
    printf("Calculadora de Salario\n");
    printf("---------------------\n");
    
    printf("Horas trabalhadas no mes: ");
    while(scanf("%d", &HT) != 1 || HT <= 0 || HT > 220) {  
        printf("Valor invalido! Digite um numero entre 1 e 220: ");
        while(getchar() != '\n'); // Limpa o buffer
    }
    
    printf("Valor da hora trabalhada (R$): ");
    while(scanf("%d", &VH) != 1 || VH <= 0) {
        printf("Valor invalido! Digite um valor positivo: ");
        while(getchar() != '\n');
    }
    
    printf("Percentual de desconto (%%): ");
    while(scanf("%d", &PD) != 1 || PD < 0 || PD > 100) {
        printf("Valor invalido! Digite entre 0 e 100: ");
        while(getchar() != '\n');
    }
    
    SB = HT * VH;
    TD = (PD / 100.0) * SB;
    SL = SB - TD;
    
    printf("\nFolha de Pagamento\n");
    printf("---------------------\n");
    printf("Horas Trabalhadas: %d h\n", HT);
    printf("Valor Hora: R$ %d.00\n", VH);
    printf("Salario Bruto: R$ %.2f\n", SB);
    printf("Desconto (%d%%): R$ %.2f\n", PD, TD);
    printf("Salario Liquido: R$ %.2f\n", SL);
    printf("---------------------\n");
    
    return 0;
}
