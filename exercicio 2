#include <stdio.h>

int main() {
    int num1, num2;
    
    printf("Digite dois números separados por espaço: ");
    
    if (scanf("%d %d", &num1, &num2) != 2) {
        printf("Erro: Por favor, digite dois números válidos.\n");
        return 1; // Retorna código de erro
    }
    
    if (num1 > num2) {
        printf("%d (primeiro) é maior que %d\n", num1, num2);
    } else if (num1 < num2) {
        printf("%d (segundo) é maior que %d\n", num2, num1);
    } else {
        printf("Os números são iguais: %d\n", num1);
    }

    return 0;
}
