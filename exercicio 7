#include <stdio.h>
#include <limits.h> 

int main() {
    int n;
    unsigned long long fat = 1; 
    
    printf("Calculadora de Fatorial\n");
    printf("Digite um numero inteiro nao negativo (0-20): ");
    
    
    if (scanf("%d", &n) != 1) {
        printf("Erro: Valor invalido. Digite um numero inteiro.\n");
        return 1;
    }
    
    if (n < 0) {
        printf("Erro: Fatorial de numero negativo nao existe.\n");
        return 1;
    }
    
    if (n > 20) {
        printf("Erro: O valor maximo permitido e 20.\n");
        return 1;
    }
    
    for (int i = 1; i <= n; i++) {
        fat *= i;
    }
    
    printf("%d! = %llu\n", n, fat); 
    return 0;
}
