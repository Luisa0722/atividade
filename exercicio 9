#include <stdio.h>

int main() {
    int n;
    
    printf("Tabuada de Multiplicacao\n");
    printf("Digite um numero inteiro: ");
    
    if (scanf("%d", &n) != 1) {
        printf("Erro: Por favor, digite um numero inteiro valido.\n");
        return 1;
    }
    
    printf("\n=== Tabuada do %d ===\n", n);
    
    for (int i = 1; i <= 10; i++) {
        printf("%2d x %2d = %3d\n", n, i, n * i); 
    }
    
    printf("=====================\n");
    return 0;
}
