#include <stdio.h>

int main() {
    int idade;
    
    printf("Digite sua idade: ");
    
    if (scanf("%d", &idade) != 1) {
        printf("Erro: Por favor, digite um número válido.\n");
        return 1; // Retorna código de erro
    }
    
    if (idade < 0) {
        printf("Erro: A idade não pode ser negativa.\n");
        return 1;
    }
    
    if (idade < 18) {
        printf("Menor de idade\n");
    } else if (idade < 60) {
        printf("Adulto\n");
    } else {
        printf("Idoso\n");
    }

    return 0;
}
